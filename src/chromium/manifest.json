{
  "name": "Search for a Cause",
  "description": "Raise money for charity every time you search.",
  "version": "0.1",
  "icons": {
    "16": "./img/logo16.png",
    "32": "./img/logo32.png",
    "48": "./img/logo48.png",
    "128": "./img/logo128.png"
  },
  "background": {
    "scripts": ["js/background.js"],
    "persistent": false
  },
  "chrome_settings_overrides": {
    "search_provider": {
      "name": "Search for a Cause",
      "keyword": "SFAC",
      "search_url": "https://dev-tab2017.gladly.io/search?q={searchTerms}",
      "favicon_url": "https://dev-tab2017.gladly.io/newtab/icons-42ff85cc2cd53d8b026433ad5b505d29/favicon-32x32.png",
      "encoding": "UTF-8",
      "is_default": true
    }
  },
  "permissions": [
    "tabs"
  ],
  "manifest_version": 2
}
